<launch>
  <node name="urimits" pkg="urimits" type="urimits_exec" output="screen">
    <rosparam command="load" file="$(find urimits)/params/urimits.yml" />
    <rosparam command="load" file="$(find urimits)/params/urimits_short.yml" />
    <param name="compute_short_tls" value="true"/>
    <param name="compute_loop" value="false"/>
  </node>
</launch>